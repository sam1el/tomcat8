# Move directories that ship in the package into place
Copy-Item -Recurse -Force "{{pkg.path}}/tc" "{{pkg.svc_var_path}}/" -verbose

# Symlink config files into $TOMCAT_HOME/conf
Get-ChildItem "{{pkg.svc_config_path}}" |
Foreach-Object {
    $file = $_.Name -replace "_","/"
    Write-Host "Linking: " {{pkg.svc_var_path}}/tc/$file to $_.FullName
    New-Item -Force -ItemType SymbolicLink -Path {{pkg.svc_config_path}}/$file -Value $_.FullName -verbose
}
